{
  "manifest_version": 3,
  "name": "Favourites",
  "description": "Favourites list",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches":[
        "<all_urls>"
      ],
      "js":[
        "background.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ]
}